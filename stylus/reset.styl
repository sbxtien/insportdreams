@import 'constants/_colors.styl'
@import '../bower_components/nib'


global-reset()

*
    box-sizing border-box

html, body
    color $color_text
    height 100%
    cursor default
    font-size 16px
    font-family "Lucida Grande", Helvetica, Arial, sans-serif


a
    color $color_link !important
    font-style italic !important
    font-family Georgia !important
    text-decoration none
    &:hover
        color $color_link_onhover !important

strong
    font-weight bold

input[type=checkbox]
    vertical-align top
