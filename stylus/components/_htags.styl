
$line_height = 1.313
$font_family = Georgia
$font_weight = bold

$htags_dimmensions = {
      'h1': { 'size': 3.000, 'v_margin': 0.563 }
    , 'h2': { 'size': 2.250, 'v_margin': 0.625 }
    , 'h3': { 'size': 1.500, 'v_margin': 1.313 }
    , 'h4': { 'size': 1.313, 'v_margin': 1.313 }
    , 'h5': { 'size': 1.125, 'v_margin': 1.313 }
    , 'h6': { 'size': 1.000, 'v_margin': 0.750 }
}

htags($factor = 1)
    .subhead
        font-style italic !important

    h1, h2, h3, h4, h5, h6, .head, .subhead
        font-family $font_family
        font-weight $font_weight

    h1, h2, h3, h4, h5, h6
        line-height unit($line_height, rem)
        
    for h_lvl in $htags_dimmensions
        {h_lvl}
            $size = $htags_dimmensions[h_lvl]['size'] * $factor
            $v_margin = $htags_dimmensions[h_lvl]['v_margin']
            font-size unit(($size < 1 ? 1 : $size), rem)
            margin unit($v_margin, rem) 0
